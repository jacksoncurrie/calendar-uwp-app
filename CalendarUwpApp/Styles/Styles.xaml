<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Add To Calendar -->

    <Style x:Key="Label" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style x:Key="ItemName" TargetType="TextBlock" BasedOn="{StaticResource Label}">
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <Style x:Key="DatePickers" TargetType="TextBlock" BasedOn="{StaticResource Label}">
        <Setter Property="Margin" Value="0,20,0,5" />
    </Style>

    <Style x:Key="TimePicker" TargetType="TimePicker">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="20,0,0,0" />
    </Style>
    
    <!-- Settings -->

    <Style x:Key="ColorPicker" TargetType="ComboBox">
        <Setter Property="Width" Value="300" />
        <Setter Property="HorizontalAlignment" Value="center" />
    </Style>
    
</ResourceDictionary>
